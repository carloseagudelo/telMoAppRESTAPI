<h2>Registrate en nuestra platafotma y lanza tu negocio a un mundo de probabilidades</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Nombre_motel %><br />
    <%= f.text_field :name, autofocus: true %>
  </div> 

  <div class="field">
    <%= f.label :Descripcion_motel %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :Tipo_de_motel %><br />
    <%= f.collection_select(:type_id, Type.all, :id, :name, {:prompt => 'Seleccione un tipo'}, { :selected => params[:id]}) %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :Video_descripcion_motel %><br />
    <%= f.text_field :URL_Video %>
  </div>

  <div class="field">
    <%= f.label :Pagina_web_motel %><br />
    <%= f.text_field :URL_WebPage%>
  </div>

  <div class="field">
    <%= f.label :Ciudad %><br />
    <%= f.collection_select(:city_id, City.all, :id, :name, {:prompt => 'Seleccione una Ciudad'}, {:selected => params[:id]}) %>
  </div>

  <div class="field">
    <%= f.label :Direccion %><br />
    <%= f.text_field :addres %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Imagen_logo %><br />
    <%= f.file_field :logo %>
  </div>

  <div class="actions">
    <%= f.submit "Registarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
